package com.hcl.i18ndemo;

import java.text.NumberFormat;
import java.util.Locale;

public class Main {
	
	
	public static void main(String[] args) {
		double d = 545455456.343;
		NumberFormat nfItaly = NumberFormat.getInstance(Locale.ITALY);
		NumberFormat nfChina = NumberFormat.getInstance(Locale.TAIWAN);
		NumberFormat nfUs = NumberFormat.getInstance(Locale.US);
		
		System.out.println(nfItaly.format(d));
		System.out.println(nfChina.format(d));
		System.out.println(nfUs.format(d));
		
		
	}
}
